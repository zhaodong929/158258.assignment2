<!-- /Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <!-- 引入CSS文件和JavaScript文件 -->
    <!-- 引入首页样式 -->
    <link rel="stylesheet" href="~/CSS/index.css">
    <!-- 引入字体图标样式 -->
    <link rel="stylesheet" href="~/CSS/iconfont.css">
    <link rel="icon" href="~/images/onthewaylogo_TZ6_1.ico">
    <style>
      
        .site-footer {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
        }
      


        .footer-inner {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%; /* 宽度设为100% */
        }

        .footer-logo {
            position:relative;
            right:150px;
            margin-right: auto; /* 将logo推向左边 */
            padding-left: 20px; /* logo与其它内容的间隔 */
        }

        .footer-links a {
            width:100px;
            margin-right: 20px; /* 链接之间的间隔 */
            text-decoration: none; /* 去除下划线 */
            color: #333; /* 链接文字颜色 */
        }

        .footer-disclaimer {
            margin-left: 30px; /* 免责声明与其他内容的间隔 */
            font-size: 0.8em; /* 文字大小 */
        }

    </style>

</head>

    <body>
        <!-- 头部开始 -->
        <div class="header">
            <div class="wrap header-box">
                <div class="logo"></div>
                <nav class="navigation">
                    <ul>
                        <li><a href="https://localhost:44339/Home/Index" class="nav-link ">Home</a></li>
                        <li><a href="https://localhost:44339/Commodity/Display" class="nav-link">Commodity</a></li>
                        <li><a href="https://localhost:44339/Forums/ShowForums" class="nav-link">Forums</a></li>
                        <li><a href="https://localhost:44339/Home/UserList" class="nav-link">Users</a></li>
                        <li><a href="https://localhost:44339/Home/About" class="nav-link">About us</a></li>
                    </ul>
                </nav>

                <div class="search">
                    <div class="search-m">
                        <div class="search-logo"></div>
                        <div class="form">
                            <input type="text" class="keywords" placeholder="The destination you want to go">
                            <button class="iconfont">&#xe61a;></button>
                            <div class="search-helper"></div>

                        </div>

                    </div>

                </div>

            </div>
        </div>
            <!-- 头部结束 -->
            <!-- 头部结束 -->
            <!-- 主体内容开始 -->
            <div class="bodycontainer">
                @RenderBody() <!-- 视图内容将渲染在这里 -->
            </div>
            <!-- 主体内容结束 -->
            <!-- 页脚开始 -->
                <!-- 页脚内容 -->
              
                <footer class="site-footer">
                    <div class="footer-inner">
                        <div class="footer-logo">
                            <img src="~/images/onthewaylogo.png" alt="On The Way Logo" /> 
                        </div>
                        <div class="footer-links">
                            <a href="https://localhost:44339/Home/Terms">Terms of Use</a>
                            <a href="https://localhost:44339/Home/Privacy">Privacy and Cookies Statement</a>
                            <a href="https://localhost:44339/Home/CookieConsent">Cookie consent</a>
                            <a href="https://localhost:44339/Home/SiteMap">Site Map</a>
                            <a href="https://localhost:44339/Home/ContactUs">Contact us</a>
                        </div>
                        <div class="footer-disclaimer">
                            <p>© 2023 On The Way. All rights reserved. Your comprehensive travel companion offering information, services, forum blogs, and travel products.</p>
                        </div>
                    </div>
                </footer>


          
            <!-- 页脚结束 -->
            <!-- 引入JavaScript文件 -->
            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            @RenderSection("scripts", required: false)

    
    </body>
</html>
